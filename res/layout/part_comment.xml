<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:orientation="vertical"
			android:id="@+id/root"

			android:background="@color/bg_item"
			>
		<LinearLayout android:orientation="horizontal"
		              android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:layout_above="@+id/text"
				>
			<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="cab404, Ð² 20:49"
					android:id="@+id/data"

					android:paddingTop="@dimen/margins"
					android:paddingLeft="@dimen/margins"
					android:paddingBottom="@dimen/margins"

					android:singleLine="false"
					android:layout_weight="1"/>
			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:id="@+id/rating"
			          android:linksClickable="true"
			          android:text="+123"
			          android:textSize="@dimen/primary_text_size"

			          android:gravity="center"
			          android:textAlignment="center"
			          android:layout_gravity="center"

			          android:textStyle="bold"
			          android:singleLine="true"
			          android:layout_marginRight="8dp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:padding="8dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/content">
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
		              android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              android:background="@color/bg_footer"
		              android:gravity="right"
		              android:paddingTop="2dp"
		              android:paddingBottom="2dp"
				>

			<TextView android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:id="@+id/id"
			          android:singleLine="false"

			          android:layout_weight="1"
			          android:layout_gravity="center_vertical"
			          android:paddingLeft="8dp"
			          android:text="#12"/>
			<ImageView android:layout_width="32dp"
			           android:layout_height="32dp"
			           android:id="@+id/favourite"
			           android:layout_gravity="center_vertical"
			           android:soundEffectsEnabled="false"
			           android:src="@drawable/ic_bar_fav"
			           android:padding="4dp"
			           android:layout_marginRight="8dp"
			           android:layout_weight="0.0"/>
			<ImageView android:layout_width="32dp"
			           android:layout_height="32dp"
			           android:id="@+id/plus"
			           android:layout_gravity="center_vertical"
			           android:soundEffectsEnabled="false"
			           android:src="@drawable/ic_bar_plus"
			           android:padding="4dp"
			           android:layout_marginRight="8dp"
			           android:layout_weight="0.0"/>
			<ImageView android:layout_width="32dp"
			           android:layout_height="32dp"
			           android:id="@+id/minus"
			           android:layout_gravity="center_vertical"
			           android:soundEffectsEnabled="false"
			           android:src="@drawable/ic_bar_minus"
			           android:padding="4dp"
			           android:layout_marginRight="8dp"
			           android:layout_weight="0.0"/>
			<ImageView android:layout_width="32dp"
			           android:layout_height="32dp"
			           android:id="@+id/reply"
			           android:layout_gravity="center_vertical"
			           android:soundEffectsEnabled="false"
			           android:src="@drawable/ic_bar_pencil"
			           android:padding="4dp"
			           android:layout_marginRight="8dp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>