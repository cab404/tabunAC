<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	<View android:layout_width="0dp"
	      android:layout_height="match_parent"
	      android:id="@+id/start_clickable_margin"
			/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:layout_marginTop="1dp"
			android:orientation="vertical"
			android:id="@+id/root"

			android:background="@color/bg_item"
			>
		<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
			<LinearLayout android:orientation="horizontal"
			              android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:gravity="center_vertical"
			              android:layout_toLeftOf="@+id/menu">
				<TextView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="cab404, Ð² 20:49"
						android:id="@+id/data"

						android:paddingTop="@dimen/internal_margins"
						android:paddingLeft="@dimen/internal_margins"
						android:paddingBottom="@dimen/internal_margins"

						android:singleLine="false"
						android:layout_weight="1"/>
				<TextView android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:id="@+id/rating"
				          android:linksClickable="true"
				          android:text="+123"
				          android:textSize="@dimen/primary_text_size"

				          android:gravity="center"
				          android:textAlignment="center"
				          android:layout_gravity="center"

				          android:textStyle="bold"
				          android:singleLine="true"
				          android:layout_marginRight="8dp"/>
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
			              android:layout_width="match_parent"
			              android:id="@+id/footer"
			              android:layout_height="wrap_content"
			              android:background="@color/bg_item_shadow"
			              android:gravity="right"
			              android:visibility="visible"
			              android:paddingRight="30dp">

				<TextView android:layout_width="0dp"
				          android:layout_height="wrap_content"
				          android:id="@+id/id"
				          android:singleLine="false"

				          android:layout_weight="1"
				          android:layout_gravity="center_vertical"
				          android:paddingLeft="8dp"
				          android:text="#12"/>
				<ImageView android:layout_width="30dp"
				           android:layout_height="30dp"
				           android:id="@+id/favourite"
				           android:layout_gravity="center_vertical"
				           android:soundEffectsEnabled="false"
				           android:src="@drawable/ic_bar_fav"
				           android:layout_marginRight="8dp"
				           android:layout_weight="0.0"
				           android:padding="4dp"/>
				<ImageView android:layout_width="30dp"
				           android:layout_height="30dp"
				           android:id="@+id/plus"
				           android:layout_gravity="center_vertical"
				           android:soundEffectsEnabled="false"
				           android:src="@drawable/ic_bar_plus"
				           android:padding="4dp"
				           android:layout_marginRight="8dp"
				           android:layout_weight="0.0"
				           android:tint="@color/font_color_green"/>
				<ImageView android:layout_width="30dp"
				           android:layout_height="30dp"
				           android:id="@+id/minus"
				           android:layout_gravity="center_vertical"
				           android:soundEffectsEnabled="false"
				           android:src="@drawable/ic_bar_minus"
				           android:padding="4dp"
				           android:layout_marginRight="8dp"
				           android:layout_weight="0.0"
				           android:tint="@color/font_color_red"/>
				<ImageView android:layout_width="30dp"
				           android:layout_height="30dp"
				           android:id="@+id/reply"
				           android:layout_gravity="center_vertical"
				           android:soundEffectsEnabled="false"
				           android:src="@drawable/ic_bar_pencil"
				           android:padding="4dp"
				           android:layout_marginRight="8dp"/>
				<ImageView android:layout_width="30dp"
				           android:layout_height="30dp"
				           android:id="@+id/edit"
				           android:layout_gravity="center_vertical"
				           android:soundEffectsEnabled="false"
				           android:src="@drawable/ic_bar_settings"
				           android:layout_marginRight="8dp"
				           android:layout_weight="0.0"
				           android:padding="4dp"/>
			</LinearLayout>
			<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:id="@+id/menu"
					android:src="@drawable/ic_more"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true"/>
		</RelativeLayout>
		<LinearLayout
				android:orientation="vertical"
				android:padding="8dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/content"
				android:paddingStart="24dp">
		</LinearLayout>
	</LinearLayout>
	<View android:layout_width="0dp"
	      android:layout_height="match_parent"
	      android:id="@+id/end_clickable_margin"
			/>
</LinearLayout>