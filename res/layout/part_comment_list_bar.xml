<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/comment_ladder_gradient_end"
              android:gravity="right"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:layout_below="@+id/comment_list"
              android:layout_alignParentBottom="true"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:hapticFeedbackEnabled="false">
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:id="@+id/switch_button"
			android:visibility="invisible">
		<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/ic_goto"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="32dp"
				android:text="+42 комментария"
				android:id="@+id/switch_text"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:drawablePadding="5dp"
				android:hapticFeedbackEnabled="false"
				android:textColor="@color/bg_item"/>
	</LinearLayout>
	<ImageView android:layout_width="32dp"
	           android:layout_height="32dp"
	           android:id="@+id/down"
	           android:layout_gravity="center_vertical"
	           android:src="@drawable/ic_down"
	           android:layout_marginRight="16dp"
	           android:padding="4dp"
	           android:tint="@color/bg_item"/>
	<ImageView android:layout_width="32dp"
	           android:layout_height="32dp"
	           android:id="@+id/update"
	           android:layout_gravity="center_vertical"
	           android:src="@drawable/ic_update"
	           android:layout_marginRight="16dp"
	           android:padding="4dp"
	           android:tint="@color/bg_item"/>
	<ImageView android:layout_width="32dp"
	           android:layout_height="32dp"
	           android:id="@+id/reply"
	           android:layout_gravity="center_vertical"
	           android:src="@drawable/ic_reply"
	           android:layout_marginRight="8dp"
	           android:padding="4dp"
	           android:tint="@color/bg_item"/>
</LinearLayout>