<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margins"
              android:background="@drawable/item_background"
              android:id="@+id/linearLayout">
	<ListView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:id="@+id/comment_list"/>
	<LinearLayout android:orientation="horizontal"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:background="@drawable/item_footer_background"
	              android:gravity="right"
	              android:paddingTop="2dp"
	              android:paddingBottom="2dp">
		<ImageView android:layout_width="32dp"
		           android:layout_height="32dp"
		           android:id="@+id/plus"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_bar_plus"
		           android:layout_marginRight="8dp"
		           android:padding="4dp"/>
		<ImageView android:layout_width="32dp"
		           android:layout_height="32dp"
		           android:id="@+id/zero"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_bar_zero"
		           android:layout_marginRight="8dp"
		           android:padding="4dp"/>
		<ImageView android:layout_width="32dp"
		           android:layout_height="32dp"
		           android:id="@+id/minus"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_bar_minus"
		           android:layout_marginRight="8dp"
		           android:padding="4dp"/>
		<ImageView android:layout_width="32dp"
		           android:layout_height="32dp"
		           android:id="@+id/reply"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_bar_pencil"
		           android:layout_marginRight="8dp"
		           android:padding="4dp"/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="#13444"
		          android:id="@+id/id"
		          android:singleLine="false"
		          android:layout_weight="1"
		          android:paddingLeft="8dp"
		          android:layout_gravity="center_vertical"/>
		<ImageView android:layout_width="32dp"
		           android:layout_height="32dp"
		           android:id="@+id/favourite"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_bar_fav"
		           android:layout_marginRight="8dp"
		           android:padding="4dp"/>
	</LinearLayout>
</LinearLayout>