<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:gravity="center"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:layout_marginTop="@dimen/external_margins"
              android:layout_marginLeft="@dimen/external_margins"
              android:layout_marginRight="@dimen/external_margins"

              android:background="@drawable/bg_part"
              android:padding="8dp">
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Сейчас мы на странице 2"
			android:id="@+id/current"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Стр. 1"
				android:id="@+id/back"
				android:drawableLeft="@drawable/ic_bar_left"
				android:gravity="center_vertical|left"
				/>
		<EditText
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:id="@+id/go_to"
				android:hint="Перейти к..."
				android:layout_margin="4dp"
				android:gravity="center"
				android:layout_weight="1"
				android:inputType="number"/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="Стр. 3"
		          android:id="@+id/next"
		          android:gravity="center_vertical|right"
		          android:drawableRight="@drawable/ic_bar_right"/>
	</LinearLayout>
	<TextView android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="Всего тут 231 страница"
	          android:id="@+id/count"/>
</LinearLayout>