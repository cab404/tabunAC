<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:padding="@dimen/internal_margins"
        android:background="@color/bg_item">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Господин N в блоге &quot;Fancy Pants&quot;"
              android:id="@+id/first_line"
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:textColor="@color/bg_item_label"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Злые шутки Мистера X"
              android:id="@+id/topic_name"
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:textColor="@color/bg_item_label"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12 комментариев"
              android:id="@+id/comment_count"
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:textColor="@color/bg_item_shadow"/>
</LinearLayout>