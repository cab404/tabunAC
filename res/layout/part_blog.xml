<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/bg_item"

              android:layout_marginTop="@dimen/external_margins"
              android:layout_marginLeft="@dimen/external_margins"
              android:layout_marginRight="@dimen/external_margins"

              android:layout_height="wrap_content"
		>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:padding="@dimen/internal_margins">
		<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:id="@+id/icon"/>
		<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="Хоуки"
				android:id="@+id/title"
				android:padding="@dimen/internal_margins"
				android:textSize="@dimen/title_text_size"
				android:textStyle="bold"
				android:layout_weight="1"
				/>
		<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:id="@+id/create"
				android:src="@drawable/ic_bar_pencil"/>
	</LinearLayout>
</LinearLayout>